{
  "manifest_version": 3,
  "name": "Drawr",
  "version": "1.3.0",
  "description": "Draw and annotate any webpage. Pen, highlighter, shapes, text, and full-page screenshots.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": {
      "16": "icons/128x128.png",
      "32": "icons/128x128.png",
      "48": "icons/128x128.png",
      "128": "icons/128x128.png"
    },
    "default_title": "Toggle Drawr"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-draw": {
      "suggested_key": {
        "default": "Alt+H"
      },
      "description": "Open/close Drawr sidebar"
    }
  },
  "icons": {
    "16": "icons/128x128.png",
    "32": "icons/128x128.png",
    "48": "icons/128x128.png",
    "128": "icons/128x128.png"
  },
  "web_accessible_resources": [{
    "resources": ["fabric.min.js"],
    "matches": ["<all_urls>"]
  }]
}
