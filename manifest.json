{
  "manifest_version": 3,
  "name": "Drawr",
  "version": "1.1.0",
  "description": "Draw on any webpage with a modern, collapsible toolbar",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_icon": {
          "16": "icons/128x128.png",
    "32": "icons/128x128.png",
    "36":"icons/128x128.png",
    "48": "icons/128x128.png",
    "128": "icons/128x128.png"
    },
    "default_title": "Toggle Drawr"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-draw": {
      "suggested_key": { "default": "Alt+D" },
      "description": "Toggle drawing mode"
    },
    "clear-canvas": {
      "suggested_key": { "default": "Alt+C" },
      "description": "Clear canvas"
    },
    "undo": {
      "suggested_key": { "default": "Alt+Z" },
      "description": "Undo last stroke"
    }
  },
  "icons": {
    "16": "icons/128x128.png",
    "32": "icons/128x128.png",
    "36":"icons/128x128.png",
    "48": "icons/128x128.png",
    "128": "icons/128x128.png"
  }
}
